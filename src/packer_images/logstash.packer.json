{
  "description": "Elasticsarch Image",
  "variables": {
    "client_id": "{{env `ARM_CLIENT_ID`}}",
    "subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}",
    "tenant_id": "{{env `ARM_TENANT_ID`}}",
    "client_secret": "{{env `ARM_CLIENT_SECRET`}}",
    "resource_group_name": "{{env `ARM_RESOURCE_GROUP`}}",
    "storage_account_name": "{{env `ARM_STORAGE_ACCOUNT`}}",

    "ssh_user": "centos",
    "ssh_pass": "password",

    "vmimage_base_version": "{{env `ARM_vmimage_base_version`}}"
  },
  "builders": [{
    "type": "azure-arm",
    "client_id": "{{user `client_id`}}",
    "client_secret": "{{user `client_secret`}}",
    "subscription_id": "{{user `subscription_id`}}",
    "tenant_id": "{{user `tenant_id`}}",

      "managed_image_resource_group_name": "{{user `azure_resource_group_name`}}",
      "managed_image_name": "elasticsearch6-{{isotime \"2006-01-02T030405\"}}",

      "os_type": "Linux",
      "image_publisher": "Canonical",
      "image_offer": "UbuntuServer",
      "image_sku": "16.04-LTS",

      "location": "{{user `azure_location`}}",
      "vm_size": "Standard_DS2_v2"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "update-machine.sh",
      "execute_command": "echo '' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "file",
      "source": "../templates/elasticsearch.yml",
      "destination": "elasticsearch.yml"
    },
    {
      "type": "shell",
      "script": "install-java8.sh",
      "execute_command": "echo '' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "install-elasticsearch6.sh",
      "environment_vars": [ "ES_VERSION={{user `elasticsearch_version`}}" ],
      "execute_command": "echo '' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "install-custom.sh"
    }
  ]
}
